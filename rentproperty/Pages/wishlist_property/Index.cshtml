@page
@model rentproperty.Pages.wishlist_property.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <h1>The Bucket List</h1>
<h2>Add Your Favourite Property</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.wishlist[0].user_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wishlist[0].property_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.wishlist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.property_id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.wishlist_id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.wishlist_id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.wishlist_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
